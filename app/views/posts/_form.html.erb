

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%=@contexto%></h3>
  </div>
  <div class="panel-body">
   <%= form_for(@post,url: posts_path,html: { multipart: true }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo ,class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :autor %><br>
    <%= f.text_field :autor ,class:"form-control"%>
  </div>
  <div class="field">
    <%= f.label :abstract %><br>
    <%= f.text_area :abstract %>
  </div>
  <div class="field">
    <%= f.label :conteudo %><br>
    <%= f.text_area :conteudo %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar,class:"btn btn-success" %>
  </div>
  

  <div class="actions">
    <%= f.submit class:"btn btn-primary"%>
  </div>
<% end %>
  </div>
    <div class="panel-footer">
   
  </div>
</div>

